---
interface Props {
  text?: string;
}

const { text } = Astro.props;
---

<section class="ai-ready-intro section-alt">
  <div class="container-content max-w-4xl mx-auto">
    <div class="prose prose-lg text-ink-body">
      <slot>
        <p>{text}</p>
      </slot>
    </div>
  </div>
</section>
