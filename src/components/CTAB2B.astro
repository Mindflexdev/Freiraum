---
export interface Props {
  headline?: string;
}

const { headline = "Sind Sie an einer Partnerschaft interessiert?" } = Astro.props;
---

<div class="bg-ink text-white rounded-card p-8 my-8 shadow-modal text-center">
  <h3 class="text-2xl font-bold mb-6">{headline}</h3>
  
  <div class="flex flex-col sm:flex-row justify-center gap-4">
    <a
      href="/kontakt/"
      class="btn bg-white text-ink hover:bg-bg-alt"
      data-event="b2b_lead_intent"
      data-event-category="conversion"
    >
      Kooperationsanfrage senden
    </a>

    <a
      href="mailto:julian@freiraum-aufloesung.de"
      class="btn border-2 border-white bg-transparent text-white hover:bg-white/10"
      data-event="email_click"
      data-event-category="conversion"
    >
      E-Mail senden
    </a>
  </div>
</div>
