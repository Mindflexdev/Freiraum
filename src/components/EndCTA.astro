---
import { contactData } from '../config/navigation';

export interface Props {
  title?: string;
  subtitle?: string;
  headline?: string;
  formLink?: string;
  primaryBtnText?: string;
}

const {
  title,
  subtitle,
  headline,
  formLink = "/kontakt/",
  primaryBtnText = "Anrufen"
} = Astro.props;

const displayTitle = title || headline || "Jetzt unverbindlich anfragen";
const displaySubtitle = subtitle || "Kostenlos & unverbindlich Â· Antwort innerhalb von 24 Stunden";
---

<section class="section-alt">
  <div class="container-content max-w-3xl mx-auto text-center">
    <h3 class="text-ink mb-3">{displayTitle}</h3>
    {subtitle && <p class="text-lg text-ink-body mb-6">{subtitle}</p>}

    <div class="flex flex-col sm:flex-row justify-center gap-3">
      <a
        href={contactData.phoneHref}
        class="btn btn-primary"
        data-event="phone_call"
        data-event-category="conversion"
      >
        <span>ğŸ“</span>
        <span>{primaryBtnText}</span>
      </a>

      <a
        href={contactData.whatsappHref}
        class="btn bg-[#25D366] text-white hover:bg-[#20bd5a]"
        data-event="whatsapp_click"
        data-event-category="conversion"
        target="_blank"
        rel="noopener noreferrer"
      >
        <span>ğŸ’¬</span>
        <span>WhatsApp</span>
      </a>

      <a
        href={formLink}
        class="btn btn-secondary"
        data-event="form_link_click"
        data-event-category="engagement"
      >
        <span>âœ‰ï¸</span>
        <span>Formular</span>
      </a>
    </div>

    {!subtitle && (
      <p class="text-sm text-ink-light mt-4">{displaySubtitle}</p>
    )}
  </div>
</section>
