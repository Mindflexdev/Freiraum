---
import { contactData } from '../config/navigation';

export interface Props {
  title?: string;
  subtitle?: string;
  headline?: string;
  formLink?: string;
  primaryBtnText?: string;
}

const {
  title,
  subtitle,
  headline,
  formLink = "/kontakt/",
  primaryBtnText = "Anrufen"
} = Astro.props;

const displayTitle = title || headline || "Jetzt unverbindlich anfragen";
const displaySubtitle = subtitle || "Kostenlos & unverbindlich Â· Antwort innerhalb von 24 Stunden";
---

<section class="bg-gray-100 py-12 px-4 mt-12 full-width">
  <div class="max-w-4xl mx-auto text-center">
    <h3 class="text-2xl md:text-3xl font-bold mb-4 text-gray-900">{displayTitle}</h3>
    {subtitle && <p class="text-lg text-gray-600 mb-8">{subtitle}</p>}

    <div class="flex flex-col md:flex-row justify-center gap-4">
      <a
        href={contactData.phoneHref}
        class="inline-flex items-center justify-center gap-2 bg-accent hover:bg-blue-600 text-white font-bold py-3 px-8 rounded-lg transition-colors shadow-md min-h-[48px]"
        data-event="phone_call"
        data-event-category="conversion"
      >
        <span>ğŸ“</span>
        <span>{primaryBtnText}</span>
      </a>

      <a
        href={contactData.whatsappHref}
        class="inline-flex items-center justify-center gap-2 bg-[#25D366] text-white font-bold py-3 px-8 rounded-lg hover:bg-[#128C7E] transition-colors shadow-md min-h-[48px]"
        data-event="whatsapp_click"
        data-event-category="conversion"
        target="_blank"
        rel="noopener noreferrer"
      >
        <span>ğŸ’¬</span>
        <span>WhatsApp</span>
      </a>

      <a
        href={formLink}
        class="inline-flex items-center justify-center gap-2 bg-white text-gray-900 border border-gray-300 font-bold py-3 px-8 rounded-lg hover:bg-gray-50 transition-colors shadow-sm min-h-[48px]"
      >
        <span>âœ‰ï¸</span>
        <span>Formular</span>
      </a>
    </div>

    {!subtitle && (
      <p class="text-sm text-gray-500 mt-4">{displaySubtitle}</p>
    )}
  </div>
</section>
