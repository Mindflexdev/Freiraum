---
export interface FAQItem {
  question: string;
  answer: string;
}

export interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;
---

<div class="max-w-3xl mx-auto my-8 px-6">
  {items && items.map((item) => (
    <details class="group mb-4 bg-card border border-border rounded-card overflow-hidden">
      <summary class="flex items-center justify-between p-4 cursor-pointer bg-bg hover:bg-bg-alt transition-colors list-none">
        <span class="font-semibold text-ink">{item.question}</span>
        <span class="transform group-open:rotate-180 transition-transform duration-200 text-ink-light">
          â–¼
        </span>
      </summary>
      <div class="p-4 text-ink-body bg-card border-t border-border-light">
        <p>{item.answer}</p>
      </div>
    </details>
  ))}
</div>

<style>
  /* Remove default triangle in Webkit */
  details > summary::-webkit-details-marker {
    display: none;
  }
</style>
