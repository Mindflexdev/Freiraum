---
import { footerNavigation, contactData } from '../config/navigation';

const currentYear = new Date().getFullYear();
---

<footer class="bg-ink text-white pt-16 pb-8">
  <div class="container-content">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Brand & NAP -->
      <div>
        <div class="text-2xl font-bold mb-6 tracking-tight">
          <span class="text-accent-light">Freiraum</span>-Aufl√∂sungen
        </div>
        <address class="not-italic text-ink-light leading-relaxed mb-6">
          <strong>{contactData.companyName}</strong><br>
          {contactData.street}<br>
          {contactData.postalCode} {contactData.city}<br>
          <br>
          <a href={contactData.phoneHref} class="hover:text-white transition-colors flex items-center gap-2 mb-2 font-medium">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            {contactData.phone}
          </a>
          <a href={`mailto:${contactData.email}`} class="hover:text-white transition-colors flex items-center gap-2">
            <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
            {contactData.email}
          </a>
        </address>
      </div>

      <!-- Navigation Columns -->
      {footerNavigation.map((section) => (
        <div>
          <p class="text-lg font-bold mb-6 text-white">{section.title}</p>
          <ul class="space-y-3">
            {section.items.map((item) => (
              <li>
                <a href={item.href} class="text-ink-light hover:text-white transition-colors">
                  {item.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-ink-light/20 pt-8 mt-8 flex flex-col md:flex-row justify-between items-center text-sm text-ink-light">
      <p>&copy; {currentYear} {contactData.companyName}. Alle Rechte vorbehalten.</p>
      <div class="flex gap-6 mt-4 md:mt-0">
        <a href="/impressum/" class="hover:text-white transition-colors">Impressum</a>
        <a href="/datenschutz/" class="hover:text-white transition-colors">Datenschutz</a>
      </div>
    </div>
  </div>
</footer>
