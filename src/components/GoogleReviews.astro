---
// src/components/GoogleReviews.astro
// Google Reviews Sektion mit Sternen, Top-Reviews und Schema.org Markup
// Liest aus src/data/reviews.json (via Build-Skript generiert)

import reviewsData from '../data/reviews.json';

interface Props {
  /** Maximal angezeigte Reviews (default: 5) */
  maxReviews?: number;
  /** Überschrift der Sektion */
  headline?: string;
  /** Hintergrund-Variante */
  variant?: 'default' | 'alt';
}

const {
  maxReviews = 5,
  headline = 'Das sagen unsere Kunden',
  variant = 'default',
} = Astro.props;

const { rating, totalReviews, reviews, googleMapsUrl } = reviewsData;
const displayReviews = reviews.slice(0, maxReviews);
const hasReviews = displayReviews.length > 0 && totalReviews > 0;

// Sterne als Array für Rendering (1-5)
function getStars(rating: number): ('full' | 'half' | 'empty')[] {
  const stars: ('full' | 'half' | 'empty')[] = [];
  for (let i = 1; i <= 5; i++) {
    if (rating >= i) stars.push('full');
    else if (rating >= i - 0.5) stars.push('half');
    else stars.push('empty');
  }
  return stars;
}

// AggregateRating Schema — wird als eigenständiges Schema injiziert
const aggregateRatingSchema = hasReviews ? {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': 'https://freiraum-aufloesung.de/#business',
  name: 'Freiraum-Auflösungen GmbH',
  aggregateRating: {
    '@type': 'AggregateRating',
    ratingValue: rating.toString(),
    bestRating: '5',
    worstRating: '1',
    ratingCount: totalReviews.toString(),
  },
  review: displayReviews.map((r) => ({
    '@type': 'Review',
    author: {
      '@type': 'Person',
      name: r.authorName,
    },
    reviewRating: {
      '@type': 'Rating',
      ratingValue: r.rating.toString(),
      bestRating: '5',
      worstRating: '1',
    },
    reviewBody: r.text,
  })),
} : null;

const sectionClass = variant === 'alt' ? 'section-alt' : 'section';

// Google "G" SVG als Inline-String
const googleG = `<svg viewBox="0 0 24 24" width="18" height="18"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>`;
---

{hasReviews && (
  <section class={sectionClass}>
    <div class="container-content max-w-6xl mx-auto">

      {/* Header: Überschrift + Google-Badge + Gesamtrating */}
      <div class="text-center mb-10">
        <h2 class="mb-5">{headline}</h2>
        <div class="inline-flex items-center gap-4 bg-white rounded-full px-6 py-3 shadow-sm border border-border">
          <div class="flex items-center gap-1.5" aria-label={`${rating} von 5 Sternen`}>
            {getStars(rating).map((star) => (
              <svg
                class={`w-5 h-5 ${star === 'empty' ? 'text-gray-300' : 'text-yellow-400'}`}
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                {star === 'half' ? (
                  <defs>
                    <linearGradient id="halfStar">
                      <stop offset="50%" stop-color="currentColor" />
                      <stop offset="50%" stop-color="#D1D5DB" />
                    </linearGradient>
                  </defs>
                ) : null}
                <path
                  fill={star === 'half' ? 'url(#halfStar)' : 'currentColor'}
                  d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                />
              </svg>
            ))}
          </div>
          <span class="text-2xl font-bold text-ink">{rating.toFixed(1)}</span>
          <div class="w-px h-6 bg-border"></div>
          <span class="text-sm text-ink-light">
            <strong class="text-ink">{totalReviews}</strong> Bewertungen auf
          </span>
          <span set:html={googleG} />
        </div>
      </div>

      {/* Review Cards — 3er Grid, letzte Reihe zentriert */}
      <div class="flex flex-wrap justify-center gap-6 mb-10">
        {displayReviews.map((review) => (
          <div class="w-full md:w-[calc(33.333%-1rem)] card-static p-6 flex flex-col relative">
            {/* Google G Badge oben rechts */}
            <div class="absolute top-4 right-4 opacity-40">
              <span set:html={googleG} />
            </div>

            {/* Sterne */}
            <div class="flex items-center gap-0.5 mb-3">
              {getStars(review.rating).map((star) => (
                <svg
                  class={`w-4 h-4 ${star === 'empty' ? 'text-gray-300' : 'text-yellow-400'}`}
                  fill="currentColor"
                  viewBox="0 0 20 20"
                  aria-hidden="true"
                >
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            {/* Review Text */}
            <p class="text-ink-body text-sm leading-relaxed flex-1 mb-4">
              &ldquo;{review.text.length > 180 ? review.text.slice(0, 180).trimEnd() + '...' : review.text}&rdquo;
            </p>

            {/* Autor */}
            <div class="flex items-center gap-3 pt-3 border-t border-border">
              <div class="w-9 h-9 rounded-full bg-accent/10 flex items-center justify-center text-accent font-bold text-sm flex-shrink-0">
                {review.authorName.charAt(0).toUpperCase()}
              </div>
              <div>
                <div class="font-semibold text-sm text-ink">{review.authorName}</div>
                {review.relativeTimeDescription && (
                  <div class="text-xs text-ink-light">{review.relativeTimeDescription}</div>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>

      {/* CTA Link zu Google */}
      <div class="text-center">
        <a
          href={googleMapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-white border border-border rounded-full px-5 py-2.5 text-sm font-semibold text-ink hover:shadow-md hover:border-accent/30 transition-all"
        >
          <span set:html={googleG} />
          Alle {totalReviews} Bewertungen ansehen
          <svg class="w-3.5 h-3.5 text-ink-light" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>

    {/* Schema.org JSON-LD — AggregateRating + Reviews */}
    {aggregateRatingSchema && (
      <script type="application/ld+json" set:html={JSON.stringify(aggregateRatingSchema)} />
    )}
  </section>
)}
