---
import { mainNavigation, contactData } from '../config/navigation';
import TrustBar from './TrustBar.astro';

// Helper to check if a menu item has sub-items
const hasSubItems = (item: any) => item.subItems && item.subItems.length > 0;
---

<header class="w-full bg-card shadow-nav font-sans z-50 relative">
  <TrustBar />
  <!-- Skip to Content -->
  <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-accent text-white p-2 rounded-btn z-[100]">
    Zum Inhalt springen
  </a>

  <div class="container-content h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex-shrink-0 flex items-center gap-2" aria-label="Zur Startseite">
      <div class="text-2xl font-bold text-ink tracking-tight">
        <span class="text-accent">Freiraum</span>-Auflösungen
      </div>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden lg:flex items-center gap-8" aria-label="Hauptnavigation">
      {mainNavigation.map((item) => (
        <div class="relative group">
          {hasSubItems(item) ? (
            <button
              class="flex items-center gap-1 py-2 text-ink hover:text-accent font-medium transition-colors cursor-pointer focus:outline-none focus:text-accent"
              aria-expanded="false"
              aria-haspopup="true"
            >
              {item.name}
              <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
              </svg>
            </button>
          ) : (
            <a href={item.href} class="text-ink hover:text-accent font-medium transition-colors">
              {item.name}
            </a>
          )}

          {/* Mega Menu / Dropdown */}
          {hasSubItems(item) && (
            <div class="absolute top-full left-0 w-64 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="bg-card rounded-card shadow-modal border border-border overflow-hidden">
                <ul class="py-2">
                  {item.subItems.map((subItem) => (
                    <li>
                      <a href={subItem.href} class="block px-4 py-2 text-sm text-ink-body hover:bg-bg hover:text-accent">
                        {subItem.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          )}
        </div>
      ))}
    </nav>

    <!-- Desktop Actions -->
    <div class="hidden lg:flex items-center gap-4">
      <a
        href={contactData.phoneHref}
        class="hidden xl:flex items-center gap-2 text-ink hover:text-accent font-medium transition-colors whitespace-nowrap"
        aria-label={`Anrufen unter ${contactData.phone}`}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
        {contactData.phone}
      </a>
      <a
        href={contactData.whatsappHref}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 bg-[#25D366] hover:bg-[#20bd5a] text-white px-4 py-2 rounded-badge text-sm font-semibold transition-colors shadow-sm"
        aria-label="WhatsApp Nachricht senden"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
        WhatsApp
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-toggle"
      class="lg:hidden p-2 text-ink hover:text-accent focus:outline-none"
      aria-label="Menü öffnen"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" /></svg>
    </button>
  </div>
</header>
  <!-- Mobile Menu Overlay -->
  <div
    id="mobile-menu"
    class="fixed inset-0 z-40 bg-card transform translate-x-full transition-transform duration-300 ease-in-out lg:hidden flex flex-col pt-20 px-6 h-screen overflow-y-auto"
    aria-hidden="true"
  >
    <button
      id="mobile-menu-close"
      class="absolute top-6 right-6 p-2 text-ink hover:text-accent focus:outline-none"
      aria-label="Menü schließen"
    >
      <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>
    </button>

    <nav class="flex flex-col gap-6 text-lg font-medium" aria-label="Mobile Navigation">
      {mainNavigation.map((item) => (
        <div class="border-b border-border-light pb-4 last:border-0">
          {hasSubItems(item) ? (
            <details class="group">
              <summary class="flex items-center justify-between cursor-pointer list-none text-ink hover:text-accent">
                {item.name}
                <svg class="w-5 h-5 transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" /></svg>
              </summary>
              <ul class="pt-4 pl-4 space-y-3">
                {item.subItems.map((subItem) => (
                  <li>
                    <a href={subItem.href} class="block text-ink-body hover:text-accent">
                      {subItem.name}
                    </a>
                  </li>
                ))}
              </ul>
            </details>
          ) : (
            <a href={item.href} class="block text-ink hover:text-accent">
              {item.name}
            </a>
          )}
        </div>
      ))}
      <div class="mt-4 flex flex-col gap-4">
        <a href={contactData.phoneHref} class="flex items-center justify-center gap-2 w-full btn btn-secondary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            Anrufen
        </a>
        <a href={contactData.whatsappHref} target="_blank" rel="noopener" class="flex items-center justify-center gap-2 w-full bg-[#25D366] text-white py-3 rounded-btn font-bold hover:bg-[#20bd5a] transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
            WhatsApp
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');

  function toggleMenu() {
    if (!mobileMenu || !mobileMenuToggle) return;
    
    const isExpanded = mobileMenuToggle.getAttribute('aria-expanded') === 'true';
    mobileMenuToggle.setAttribute('aria-expanded', (!isExpanded).toString());
    
    if (isExpanded) {
        // Close
        mobileMenu.classList.add('translate-x-full');
        mobileMenu.setAttribute('aria-hidden', 'true');
        document.body.classList.remove('overflow-hidden');
    } else {
        // Open
        mobileMenu.classList.remove('translate-x-full');
        mobileMenu.setAttribute('aria-hidden', 'false');
        document.body.classList.add('overflow-hidden');
    }
  }

  mobileMenuToggle?.addEventListener('click', toggleMenu);
  mobileMenuClose?.addEventListener('click', toggleMenu);
</script>
