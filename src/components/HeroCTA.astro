---
import { contactData } from '../config/navigation';

export interface Props {
  title?: string;
  subline?: string;
  image?: string;
  imageAlt?: string;
  primaryBtnText?: string;
  secondaryBtnText?: string;
  primaryBtnLink?: string;
  phoneHref?: string;
  whatsappHref?: string;
}

const {
  title = "Freiraum-Auflösungen Berlin",
  subline = "Professionell, schnell & besenrein",
  image = "/images/transporter-seitlich.jpg",
  imageAlt = "Freiraum-Auflösungen – professionelle Wohnungsauflösung und Entrümpelung in Berlin",
  primaryBtnText = "Jetzt anrufen",
  secondaryBtnText = "WhatsApp schreiben",
  primaryBtnLink,
  phoneHref = contactData.phoneHref,
  whatsappHref = contactData.whatsappHref
} = Astro.props;

const primaryLink = primaryBtnLink || phoneHref;
const secondaryLink = whatsappHref;
---

<section class="relative bg-accent-dark text-white overflow-hidden">
  <div class="absolute inset-0 bg-black/50 z-10"></div>
  <img
    src={image}
    alt={imageAlt}
    class="absolute inset-0 w-full h-full object-cover z-0"
    loading="eager"
    width="1200"
    height="800"
    decoding="async"
    fetchpriority="high"
  />
  <div class="absolute inset-0 bg-[linear-gradient(to_right_bottom,rgba(0,0,0,0.65),rgba(0,0,0,0.35))] z-[1]"></div>

  <div class="container-content py-12 md:py-32 relative z-20 text-center max-w-5xl mx-auto">
    <h1 class="text-white mb-4 md:mb-6">
      {title}
    </h1>
    <p class="text-lg md:text-2xl mb-6 md:mb-10 text-white/80 max-w-3xl mx-auto font-light">
      {subline}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a
        href={primaryLink}
        class="btn btn-primary w-full sm:w-auto text-lg shadow-btn"
        data-event="phone_call"
        data-event-category="conversion"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
        <span>{primaryBtnText}</span>
      </a>

      <a
        href={secondaryLink}
        class="btn w-full sm:w-auto text-lg border-2 border-white bg-transparent text-white hover:bg-white hover:text-[var(--color-ink)]"
        data-event="whatsapp_click"
        data-event-category="conversion"
        target="_blank"
        rel="noopener noreferrer"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
        <span>{secondaryBtnText}</span>
      </a>
    </div>
    <p class="mt-4 text-sm text-white/60"><svg class="w-3.5 h-3.5 inline-block mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>Kostenlos & unverbindlich · Antwort in 24h</p>
  </div>
</section>
