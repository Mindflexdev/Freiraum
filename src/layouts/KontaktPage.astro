---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ContactFormB2C from '../components/ContactFormB2C.astro';
import TrustBadges from '../components/TrustBadges.astro';
import {
  buildLocalBusinessSchema,
  buildBreadcrumbSchema,
  buildContactPointSchema,
} from '../utils/schema';

const { frontmatter } = Astro.props;
const {
  title = "Kontakt",
  description = "Kontaktieren Sie uns f√ºr eine kostenlose Besichtigung.",
  h1,
} = frontmatter || Astro.props;

// Schema: LocalBusiness + Breadcrumb + ContactPoint
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Kontakt', url: '/kontakt/' },
];

const schemas: object[] = [
  buildLocalBusinessSchema(),
  buildBreadcrumbSchema(breadcrumbItems),
  buildContactPointSchema(),
];
