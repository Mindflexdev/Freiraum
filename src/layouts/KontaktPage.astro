---
import BaseLayout from './BaseLayout.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import ContactFormB2C from '../components/ContactFormB2C.astro';
import TrustBadges from '../components/TrustBadges.astro';
import {
  buildLocalBusinessSchema,
  buildBreadcrumbSchema,
  buildContactPointSchema,
} from '../utils/schema';

const { frontmatter } = Astro.props;
const {
  title = "Kontakt",
  description = "Kontaktieren Sie uns f√ºr eine kostenlose Besichtigung.",
  h1,
} = frontmatter || Astro.props;

// Schema: LocalBusiness + Breadcrumb + ContactPoint
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Kontakt', url: '/kontakt/' },
];

const schemas: object[] = [
  buildLocalBusinessSchema(),
  buildBreadcrumbSchema(breadcrumbItems),
  buildContactPointSchema(),
];
---

<BaseLayout
  title={title}
  description={description}
  schemas={schemas}
  pageType="contact"
  serviceCategory="privat"
  silo="generic"
  targetArea="Berlin"
  showStickyCTA={false}
>
  <Breadcrumbs items={breadcrumbItems} />

  <section class="container-content py-12">
    <h1 class="text-center mb-8">{h1 || "Kontakt aufnehmen"}</h1>
