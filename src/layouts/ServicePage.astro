---
import BaseLayout from './BaseLayout.astro';
import HeroCTA from '../components/HeroCTA.astro';
import AIReadyIntro from '../components/AIReadyIntro.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import InlineCTA from '../components/InlineCTA.astro';
import TrustBadges from '../components/TrustBadges.astro';
import FAQAccordion from '../components/FAQAccordion.astro';
import EndCTA from '../components/EndCTA.astro';
import {
  buildLocalBusinessSchema,
  buildBreadcrumbSchema,
  buildServiceSchema,
  buildFAQSchema,
} from '../utils/schema';

const { frontmatter } = Astro.props;
const {
  title,
  description,
  heroImage,
  heroTitle,
  heroSubline,
  introText,
  faq,
  serviceName,
  serviceDescription,
  parentHub,
} = frontmatter || Astro.props;

// Schema aufbauen: LocalBusiness + Breadcrumb + Service (+ optional FAQ)
// Gewerbe-Spokes bekommen 3-stufige Breadcrumbs (Home → Gewerbe-Hub → Spoke)
const breadcrumbItems = parentHub
  ? [
      { name: 'Home', url: '/' },
      { name: parentHub.name, url: parentHub.url },
      { name: serviceName || title, url: Astro.url.pathname },
    ]
  : [
      { name: 'Home', url: '/' },
      { name: serviceName || title, url: Astro.url.pathname },
    ];

const schemas: object[] = [
  buildLocalBusinessSchema(),
  buildBreadcrumbSchema(breadcrumbItems),
  buildServiceSchema(serviceName || title, serviceDescription || description),
];

if (faq && faq.length > 0) {
  schemas.push(buildFAQSchema(faq));
}
---

<BaseLayout
  title={title}
  description={description}
  schemas={schemas}
  pageType="service"
  serviceCategory={parentHub ? "gewerbe" : "privat"}
  silo={parentHub ? "gewerbe" : "services-privat"}
  targetArea="Berlin"
  showStickyCTA={true}
>
  <Breadcrumbs items={breadcrumbItems} />

  <HeroCTA
    title={heroTitle}
    subline={heroSubline}
    image={heroImage}
  />

  <AIReadyIntro>
    <p>{introText}</p>
  </AIReadyIntro>

  <section class="container-content py-8 max-w-4xl mx-auto prose prose-lg">
    <slot /> <!-- Main Content Slot -->
  </section>

  <InlineCTA />

  <TrustBadges />

  <section class="container-content py-12 max-w-4xl mx-auto">
    <slot name="more-content" />
  </section>

  {faq && (
    <section class="container-content py-12 max-w-3xl mx-auto">
      <h2 class="text-ink mb-8 text-center">Häufige Fragen</h2>
      <FAQAccordion items={faq} />
    </section>
  )}

  <EndCTA />
</BaseLayout>
